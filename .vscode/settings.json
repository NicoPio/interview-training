{
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#74ccfd",
        "activityBar.background": "#74ccfd",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#fb04a3",
        "activityBarBadge.foreground": "#e7e7e7",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#74ccfd",
        "statusBar.background": "#42bafc",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#10a8fb",
        "statusBarItem.remoteBackground": "#42bafc",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#42bafc",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#42bafc99",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "peacock.color": "#42bafc",

    "files.associations": {
        "*.css": "tailwindcss"
    },
    "editor.quickSuggestions": {
        "strings": "on"
    },
    "tailwindCSS.classAttributes": ["class", "ui"],
    "tailwindCSS.experimental.classRegex": [
        ["ui:\\s*{([^)]*)\\s*}", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],

    // ESLint and formatting settings
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    }

}